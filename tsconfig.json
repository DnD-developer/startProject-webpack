{
	"exclude": ["./webpack/*.js", "./*.js"],
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "ES6",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./app",
		"jsx": "react-jsx",
		"removeComments": true,
		"noImplicitOverride": true,
		"allowJs": true,
		"checkJs": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "dashes"
					// "customMatcher": "\\.module\\.(c|le|sa|sc)ss$"
				}
			}
		]
	}
}
