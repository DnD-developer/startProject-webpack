{
	"exclude": ["./coverage/**/*.js", "./webpack/**/*.js", "./*.js", "./dist/**/*.js"],
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "ES6",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react",
		"removeComments": true,
		"noImplicitOverride": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": true,
		"types": ["react/experimental", "jest", "mocha", "node"],
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "dashes"
				}
			}
		]
	}
}
